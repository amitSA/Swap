extends ../layout

block append stylesheets
  style.
     .signinform {
        border-style: solid;
        border-color : rgb(23,55,94);
        border-width: 2px;
        background-color : rgb(225,225,225);
        border-radius: 15px;
        height: 100%;
        padding : 10px 10px 0px 10px;
     }
     .mytabs {
       margin-left : 5%;
     }

      ul.nav > li > a  {
        background-color: rgb(85,142,213);    /* Dark blue: 23, 55,94   .... Light Blue: 85,142,213 */
        color : white;
      }
      ul.nav > li > a:hover {
        background-color: rgb(23,55,94);    /* Dark blue: 23, 55,94   .... Light Blue: 85,142,213 */
        color : white;
      }
      ul.nav > li.active > a, ul.nav > li.active > a:hover {
        background-color: rgb(23,55,94);    /* Dark blue: 23, 55,94   .... Light Blue: 85,142,213 */
        color : white;
      }

block append content
    //is the logo something we want in EVERY PAGE for the website
    div.container
      div.header
        div.nav.nav-pills.pull-left
          a(href = "/")
            img(src = "images/swaplogo.png", alt = "unloaded image").img-rounded
          
    div.container
        div.col-xs-offset-4.col-xs-4
          
              div.tabpanel.mytabs
                ul.nav.nav-tabs(role = "tablist")
                   li.active
                       a(data-target="#login", data-toggle="tab") Login
                   li
                       a(data-target="#signup", data-toggle="tab") Sign Up 
               
              div.signinform
                div.tab-content
                   div.tab-pane.in.active.fade#login
                      form(role="form", method = "GET" , action = "/login")
                        div.form-group
                          label(for="login-email") Email
                          input#login-email.form-control(type="email", name="email" ,placeholder="Your email", required)
                        div.form-group  
                          button.btn.btn-primary.btn-sm(type="submit")
                            span.glyphicon.glyphicon-chevron-right 
                            | Login   
                   div.tab-pane.fade#signup
                      form(role="form", method="POST", action="/newuser")
                        div.form-group
                          label(for="signup-name") Name
                          input#signup-name.form-control(type="text", placeholder="Your public name", name="userName", required)
                        div.form-group
                          label(for="signup-email") Email
                          input#signup-email.form-control(type="email", placeholder="Your email", name="email", required)
                        div.form-group
                          button.btn.btn-primary.btn-sm(type="submit")
                            span.glyphicon.glyphicon-chevron-right 
                            | Sign In
                

            
