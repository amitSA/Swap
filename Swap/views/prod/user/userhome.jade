extends userlayout

block append stylesheets
   style.
    .header-display {
      display : inline-block;
    }
    .head-image {
      width: 120px;
      height: 75px;
    }

    .pushtab{
      margin-left : 4%;
    }
      
    .my-tabcontent{
      border-style: solid;
      border-color : rgb(23,55,94);
      border-width: 2px;
      background-color : rgb(225,225,225);
      border-radius: 15px;
      height: 100%;
      padding : 10px 10px 0px 10px;
    }
    ul.nav > li > a  {
        background-color: rgb(85,142,213);    /* Dark blue: 23, 55,94   .... Light Blue: 85,142,213 */
        color : white;
      }
    ul.nav > li > a:hover {
      background-color: rgb(23,55,94);    /* Dark blue: 23, 55,94   .... Light Blue: 85,142,213 */
      color : white;
    }
    ul.nav > li.active > a, ul.nav > li.active > a:hover {
      background-color: rgb(23,55,94);    /* Dark blue: 23, 55,94   .... Light Blue: 85,142,213 */
      color : white;
    }
    select {
      float : right;
      margin-bottom : 5px;
    }
    .newres {
      float : right;
    }

    .newCellRes{
      /*background-color : #FFFFCC ; */   
      border-color : red;
      border-width : 1px;
      border-style : solid;
    }
    .control-btn{
      width : 40px;  /*25%*/
      height : 40px; /*50%*/
      margin-right : 5%;
    }
    .control-btn:hover {
       -webkit-filter: hue-rotate(50deg);
    }


block append content
  div.container-fluid
    div.col-sm-2      
      a(href = "/")
        img(src = "images/swaplogo.png", alt = "unloaded image").img-rounded.head-image
    div.col-sm-offset-1.col-sm-3
      h2 Welcome #{name}! 
    div.col-sm-offset-1.col-sm-5         
      div.navbar.navbar-default(role="navigation")
        div.container-fluid
          div.collapse.navbar-collapse
            u1.nav.navbar-nav.navbar-right
              li.active
                a(href="/logout") Logout
                     
    div.newres
       a(onclick="makeNewRes()") 
          h2 New Reservation 

  div.container-fluid
     div.tabpanel.pushtab
        ul.nav.nav-tabs(role="tablist")
           li.active
              a(data-target="#myreservations" ,data-toggle="tab")
                 |My Reservations
           li
              a(data-target="#market" ,data-toggle="tab")
                 |Swap Market
     div.my-tabcontent
        div.tabcontent
           div.tab-pane.active.in.active.fade#myreservations
              select#selectID(onchange="change()")
                  option(value="active") Active reservation
                  option(value="taken") Taken reservation
                  option(value="past") Past reservation
              div#tableID     
                 table
                    thead
                       tr 
                          th Restaurant
                          th Date
                          th Time
                          th Guests
                          th Name
                          th Controls
                          
           div.tab-pane.active.fade#market
              div#tableID 
  input.control-btn#save-btn(type="image",src="images/save.png",alt="Submit",hidden)
  input.control-btn#delete-btn(type="image",src="images/delete.png",alt="Submit",hidden)    
        
  


